---
version: '3'
services:

# START SERVICE rest.elasticsearch
  rest:
    image: ${CONTECO_REGISTRY}${CONTECO_REALM_RUNTIME}/conteco.rest.elasticsearch:v1.0.2
    environment: ['CONTECO_STATIC_REST_BASE_API_LOGGING=${CONTECO_DC_REST_ELASTICSEARCH_ENVIRONMENT_REST_BASE_CURL_LOGGING}','CONTECO_REST_BASE_PROTOCOL=${CONTECO_DC_REST_ELASTICSEARCH_ENVIRONMENT_REST_ELASTICSEARCH_PROTOCOL}','CONTECO_REST_BASE_HOST=${CONTECO_DC_REST_ELASTICSEARCH_ENVIRONMENT_REST_ELASTICSEARCH_HOST}','CONTECO_REST_BASE_PORT=${CONTECO_DC_REST_ELASTICSEARCH_ENVIRONMENT_REST_ELASTICSEARCH_PORT}','CONTECO_REST_BASE_URLPREFIX=${CONTECO_DC_REST_ELASTICSEARCH_ENVIRONMENT_REST_ELASTICSEARCH_PREFIX}']
    command: [${CONTECO_DC_REST_ELASTICSEARCH_COMMAND}]
    volumes: ['${CONTECO_STACKPREFIX}_rest_elasticsearch_data_volume:/conteco/pwd'${CONTECO_DC_REST_ELASTICSEARCH_VOLUMES_MAPPINGS}]
    ports: []
    networks: [${CONTECO_NETWORKLOCAL}_overlay]
    deploy:
      mode: ${CONTECO_DC_REST_ELASTICSEARCH_DEPLOY_MODE}
      resources:
        limits:
          memory: '${CONTECO_DC_REST_ELASTICSEARCH_DEPLOY_RESOURCES_LIMITS_MEMORY}'
        reservations:
          memory: '${CONTECO_DC_REST_ELASTICSEARCH_DEPLOY_RESOURCES_RESERVATIONS_MEMORY}'
      restart_policy: { condition: none }
${CONTECO_DC_REST_ELASTICSEARCH_COMPOSE_EXTENSIONS}
# END SERVICE rest.elasticsearch

networks: {${CONTECO_NETWORKLOCAL}_overlay: { external: true }}
volumes: {${CONTECO_STACKPREFIX}_rest_elasticsearch_data_volume: { external: true }}
${CONTECO_DC_GLOBAL_COMPOSE_EXTENSIONS}
